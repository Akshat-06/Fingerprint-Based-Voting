<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/fingerimage"
            android:layout_width="110sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_image_24" />

        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/firebaseimage"
            android:layout_width="100sp"
            android:layout_gravity="center"
            android:layout_height="200sp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_image_24"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/replacetext"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:textAlignment="center"
            android:text="@string/replace_Text"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cambutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="@string/camera" />

        <Button
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifyfinger"
            android:background="@drawable/button"
            android:text="@string/verify_fingerprint"
            android:layout_gravity="center"/>

        <Button
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verifyvoting"
            android:background="@drawable/button"
            android:text="@string/confirm_voting"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>